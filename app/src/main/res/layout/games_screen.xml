<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gamecentrebackground"
        android:orientation="vertical">

        <Button
            android:id="@+id/Sliding_Puzzle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/numbers"
            android:text="Sliding Puzzle"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/memory_tiles"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/memorytilespreview"
            android:text="Memory Tiles"
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/twenty_fourty_eight"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/twentyfortyeightpreview"
            android:text="2048"
            android:textColor="#FF0000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>