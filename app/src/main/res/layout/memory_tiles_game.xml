<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <fall2018.csc2017.slidingtiles.controller.TapDetectGridView
        android:id="@+id/memory_tiles_grid"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        tools:context="fall2018.csc2017.slidingtiles.memorytiles.screens.MemoryTilesGameScreen" />

    <TextView
        android:id="@+id/textView_memorytiles_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Memory Tiles"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_memorytiles_title"
        android:layout_marginTop="82dp"
        android:text="Score:"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/memory_tiles_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_score_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="0dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text=""
        android:textSize="30sp" />

    <TextView
        android:id="@+id/timeCounterMemoryTiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_score_title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="73dp"
        android:text="Time: "
        android:textSize="30sp" />

</RelativeLayout>