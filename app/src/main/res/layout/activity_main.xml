<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc2017.slidingtiles.SlidingTilesGameScreen" >

    <fall2018.csc2017.slidingtiles.controller.TapDetectGridView
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        tools:context="fall2018.csc2017.slidingtiles.SlidingTilesGameScreen" />

    <Button
        android:id="@+id/sliding_tiles_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="0dp"
        android:text="Undo" />

    <EditText
        android:id="@+id/undo_amount"
        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sliding_tiles_undo"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/sliding_tiles_undo"
        android:ems="10"
        android:inputType="number"
        android:text="3"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/sliding_tiles_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="9dp"
        android:text="0:00"
        android:textSize="24sp" />
</RelativeLayout>